@model IEnumerable<BlogMVCApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>
<hr />
<p>
    @Html.ActionLink("Add Category", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
@if(TempData["Category"]!=null)
{
    var category = (BlogMVCApp.Models.Category)TempData["Category"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span> @category.CategoryName </strong> is Updated.
    </div>
}
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfBlogs)
        </th>
        <th style="width: 100px"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @item.NumberOfBlogs
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
