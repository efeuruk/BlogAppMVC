@model IEnumerable<BlogMVCApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary"})
</p>
<hr />

@if(TempData["Blog"]!=null)
{
    var blog = (BlogMVCApp.Models.Blog)TempData["Blog"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span> @blog.Title </strong> is Updated.
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <!--<th>
            Html.DisplayNameFor(model => model.Description)
        </th>-->
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <!--<th>
            Html.DisplayNameFor(model => model.Content)
        </th>-->
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePage)
        </th>
        <th style="width: 100px"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <!--<td>
            //Html.DisplayFor(modelItem => item.Description)
        </td>-->
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <!--<td>
            //Html.DisplayFor(modelItem => item.Content)
        </td>-->
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (item.Approval)
             {
                <label class="label label-success">Approved</label>
             }
            else
            {
                <label class="label label-danger">Wait for Approval</label>
            }
        </td>
        <td>
           @if(item.HomePage)
           {
            <label class="label label-success">HomePage</label>
           }
           else
           {
               <label class="label label-danger">Not HomePage</label>
           }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class="btn btn-primary btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
